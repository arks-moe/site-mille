---
import SiteLayout from "../layouts/SiteLayout.astro";
import reroutes from "src/reroutes.json";
export function getStaticPaths() {
  return reroutes.map((route) => {
    return {
      params: { reroute: route.route },
      props: { route }
    }
  });
}

const { reroute } = Astro.params;
const { route: { route, src, location } } = Astro.props;

const title = `Redirecting${location ? ` to ${location}` : ''}... | Mille's Corner`
const description = location ? `Link to ${location}.` : 'Yet another shortlink...';


---

<head>
  <meta http-equiv="refresh" content={`1; url=${src}`} />
</head>

<SiteLayout title={title} opengraph={{title: location, description}}>
  <div class="text-center flex flex-col items-center gap-8 py-16">
    <img src="../assets/priesttwirl.gif" alt="Maiden and Spell Priest Twirling">
    <div class="prose">
      <h2>{`Redirecting${location ? ` to ${location}` : ''}...`}</h2>
    </div>
    <p class="text-2xl">
      If you are not redirected in a second,
      <a class="link link-primary" href={src}>click
        here</a>.
    </p>
  </div>
</SiteLayout>
